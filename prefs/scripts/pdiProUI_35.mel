	if( $pdiCrackerCurvePath=="")
	{
        error "no path assigned";
		return;
	}

    int $startTime = `playbackOptions -query -minTime`;
    int $endTime = `playbackOptions -query -maxTime`;

    // create an object, e.g. a sphere
