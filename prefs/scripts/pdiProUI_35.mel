global proc pdiSelectTransSourceObject()
{
	global int $pdiTransFrame;
    global string $pdiFBodiesList;
    global string $pdiTransSourceObject;
    global string $butPdiTransSourceObject;
    global string $chkPdiTransFbody;    
    global string $fieldPdiTransFrameFbody;

//release last source object first
	if( $pdiTransSourceObject!= "")
	{
	    string $selected[];
		$selected = `textScrollList -query -selectItem $pdiFBodiesList`;
	
        string $transform[] = `listRelatives -p $pdiTransSourceObject`;
        string $pdiNodes[] = `listRelatives -c -type pdiRigidBody $transform[0]`;

        int $isConnected = `isConnected ($selected[0] + ".animBody") ($pdiNodes[0] + ".transFbody")`;
        if( $isConnected == 1)
        {
            disconnectAttr ($selected[0] + ".animBody") ($pdiNodes[0] + ".transFbody");
	        //remove visibility keys
		    cutKey -clear -at visibility $transform[0];           
        }
		$pdiTransSourceObject="";
	}		
    string $selection[] = `ls -selection -dag -type "mesh"`;

//	print $selection[0];
	
    if( size($selection) > 0)
    {        
        $pdiTransSourceObject = $selection[0];

        string $selected = " : " +  $pdiTransSourceObject;
        button -edit -label $selected $butPdiTransSourceObject;

        string $transform[] = `listRelatives -p $pdiTransSourceObject`;
        string $pdiNodes[] = `listRelatives -c -type pdiRigidBody $transform[0]`;

        if( size( $pdiNodes) == 0)
        {
            new_PDIBody -a 0 -st 3 $pdiTransSourceObject;
        }

        $state = `checkBox -query -value $chkPdiTransFbody`;
		
		if(	$state==true)
		{
			setPdiTransFbody();
		}	
		else
		{
			//it must be initialization from code, set the trans frame
			
//			print $pdiTransFrame;
	        intField -edit -value $pdiTransFrame $fieldPdiTransFrameFbody;			
		}
    }
    else
    {
        $pdiTransSourceObject="";
        button -edit -label "Select animated object" $butPdiTransSourceObject;
        warning "No animated object selected";
    }

}
global proc setPdiTransFbody()
{
    global string $pdiFBodiesList;
    global string $chkPdiTransFbody;
    global string $fieldPdiTransFrameFbody;
    global string $butPdiTransSourceObject;
    global string $pdiTransSourceObject;

    string $selected[];
    $selected = `textScrollList -query -selectItem $pdiFBodiesList`;

    if( size( $selected) > 0)
    {
        $state = `checkBox -query -value $chkPdiTransFbody`;
        int $frame = `intField -q -value $fieldPdiTransFrameFbody`;	

        //locate the shatter group
        string $list[] = `listConnections -d on -s off  ($selected[0] + ".rigidBodies")`;
        string $shattergroup[] = `listRelatives -p $list[0]`;

        button -e -enable $state $butPdiTransSourceObject;
        //button -e -label "Select Animated Object" $pdiTransSourceObject;
        //$pdiTransSourceObject="";

        if( $state == true )
        {
            setAttr ($selected[0] + ".doTrans" ) true;
            
            if( $frame > 0 )
            {
                cutKey -clear -at enabled $selected[0];

                setKeyframe -v 0 -t ($frame-1) -at enabled $selected[0];
                setKeyframe -v 1 -t $frame -at enabled $selected[0];

                //animate the visibility attribute
                cutKey -clear -at visibility $shattergroup[0];
                setKeyframe -v 0 -t ($frame-1) -at visibility $shattergroup[0];                
                setKeyframe -v 1 -t $frame -at visibility $shattergroup[0];

                setAttr ($selected[0] + ".transFrame" ) $frame;  
                setAttr ($selected[0] + ".usercommand" ) true;

                //force update
                getAttr ($selected[0] + ".ca_enabled" );
            }
            if( $pdiTransSourceObject != "")
            {
                string $transform[] = `listRelatives -p $pdiTransSourceObject`;
                string $pdiNodes[] = `listRelatives -c -type pdiRigidBody $transform[0]`;

                //animate the visibility attribute
                cutKey -clear -at visibility $transform[0];
                setKeyframe -v 1 -t ($frame-1) -at visibility $transform[0];                
                setKeyframe -v 0 -t $frame -at visibility $transform[0];

                int $isconnected = `isConnected ($selected[0] + ".animBody") ($pdiNodes[0] + ".transFbody")`;
                if( $isconnected == 0)
                {
                    connectAttr ($selected[0] + ".animBody") ($pdiNodes[0] + ".transFbody");
                }
            }
        }
        else
        {
            setAttr ($selected[0] + ".doTrans" ) false;
            cutKey -clear -at enabled $selected[0];
    	    setAttr ($selected[0] + ".enabled" ) true;            

            cutKey -clear -at visibility $shattergroup[0];
            setAttr ($shattergroup[0] + ".visibility" ) true;
            if( $pdiTransSourceObject != "")
            {
                string $transform[] = `listRelatives -p $pdiTransSourceObject`;
                string $pdiNodes[] = `listRelatives -c -type pdiRigidBody $transform[0]`;

                //animate the visibility attribute
                cutKey -clear -at visibility $transform[0];
                setAttr ($transform[0] + ".visibility" ) true;

//                int $isconnected = `isConnected ($selected[0] + ".animBody") ($pdiNodes[0] + ".transFbody")`;
//                if( $isconnected > 0)
//                {
//                    disconnectAttr ($selected[0] + ".animBody") ($pdiNodes[0] + ".transFbody");
//                }

            }
//                setAttr ($obj + ".transFrame" ) $frame;                
        }
    }
    else
    {
        confirmDialog
        -title "Pdi Info"
        -message "Select a fracture body from the list"
        -button "OK" 
        -defaultButton "OK" ;

        checkBox -edit -value 0 $chkPdiTransFbody;
    }

}
