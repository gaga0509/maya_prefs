global proc setPdiTransition()
{
    global string $chkPdiTransition;
    global string $fieldPdiTransFrame;

    string  $PDIObjects[];
    $PDIObjects = `ls -selection -dag -leaf -type pdiRigidBody`;

    $state = `checkBox -query -value $chkPdiTransition`;
    int $frame = `intField -q -value $fieldPdiTransFrame`;	

    if( $state == true )
    {
        if( $frame > 0)
        {
            //activate transition
            for( $obj in $PDIObjects)
            {
                int $passive = getAttr ($obj + ".passive" );

                if( $passive > 0)
                {
                    cutKey -clear -at passive $obj;

                    setKeyframe -v 1 -t ($frame-1)  -at passive $obj;
                    setKeyframe -v 0 -t $frame -at passive $obj;

//                    setAttr ($obj + ".transFrame" ) $frame;  
                    setAttr ($obj + ".usercommand" ) true;

                    //force update
                    getAttr ($obj + ".ca_rigidBodyParam" );

                }
            }      
        }
    }
    else
    {
        //deactivate transition
        for( $obj in $PDIObjects)
        {
            int $passive = getAttr ($obj + ".passive" );

            if( $passive > 0)
            {
                cutKey -clear -at passive $obj;

//                setAttr ($obj + ".transFrame" ) $frame;                
            }
        }      

    }
}
