global proc createPdiIncludeExcludeFieldsWin()
{
    global string $pdiExludedFieldsList;
    global string $pdiIncludedFieldsList;
    string $form = `setParent -q`;

    // layoutDialog's are not resizable, so hard code a size here,
    // to make sure all UI elements are visible.
    //

    formLayout -e -width 200 $form;

	string $txtExcluded= `text -label "Exclude: "  -font "boldLabelFont"`;
	string $txtIncluded= `text -label "Include: "  -font "boldLabelFont"`;
    $pdiExludedFieldsList = `textScrollList -w 120 -numberOfRows 10 -allowMultiSelection true` ;
    $pdiIncludedFieldsList = `textScrollList -w 120 -numberOfRows 10 -allowMultiSelection true` ;
    string $butOKFields = `button  -w 80  -h 30 -label "Accept" -command "pdiAcceptFields"`;
    string $butAddFields = `button  -w 30  -h 20 -label ">>" -command "pdiIncludeField"`;
    string $butRemoveFields = `button  -w 30  -h 20 -label "<<" -command "pdiExcludeField"`;

    int $spacer = 15;
    int $top = 5;
    int $edge = 5;

    formLayout -edit
        -attachForm            $txtExcluded  "left"   $spacer
        -attachControl         $txtIncluded  "left"  140 $txtExcluded
        -attachControl         $pdiExludedFieldsList "top" $edge $txtExcluded
        -attachForm            $pdiExludedFieldsList  "left"   $spacer
        -attachForm            $pdiExludedFieldsList  "bottom"    40
        -attachControl         $pdiIncludedFieldsList "top" $edge $txtIncluded
//        -attachControl         $pdiIncludedFieldsList  "left"  60 $pdiExludedFieldsList
        -attachForm            $pdiIncludedFieldsList  "left"   200
        -attachForm            $pdiIncludedFieldsList  "bottom"   40
        -attachControl         $butAddFields "top" 50 $txtExcluded
        -attachControl         $butAddFields "left" $spacer $pdiExludedFieldsList
        -attachControl         $butRemoveFields "top" 100 $txtExcluded
        -attachControl         $butRemoveFields "left" $spacer $pdiExludedFieldsList
        -attachControl         $butOKFields "top" $edge $pdiIncludedFieldsList
        -attachForm            $butOKFields  "left" 350 
    $form;

	string  $PDIObjects[];
	$PDIObjects = `ls -selection -dag -leaf -type pdiRigidBody`;
//    print $PDIObjects[0];

    string $fields[];
    $fields =`listConnections ($PDIObjects[0] +".fieldList")`;
//    print $fields;

    //fill included list
    for ( $obj in $fields)
	{
        textScrollList -edit -append $obj $pdiIncludedFieldsList;
    }

    //fill exlclude list
    string  $transformNodes[];
    $transformNodes = `ls -tr -dag -leaf`;
    string  $sceneforceFields[];

    for ( $obj in $transformNodes)
	{
        string $type = `nodeType $obj`;
        if( $type == "gravityField" ||
            $type == "radialField" ||
            $type == "airField" ||
            $type == "vortexField" ||
            $type == "dragField" ||
            $type == "newtonField" ||
            $type == "turbulenceField" ||
            $type == "uniformField" ||
            $type == "volumeAxisField" )
        {
            $sceneforceFields[size($sceneforceFields)]=$obj;
        }
    }
    clear($transformNodes);

    //fill included list
    int $bIncludedField=0;
    for ( $obj in $sceneforceFields)
	{
        $bIncludedField=0;
        for ( $obj2 in $fields)
	    {
            if( $obj == $obj2)
            {
                $bIncludedField=1;
                break;
            }
        }
        if( $bIncludedField==0)
        {
            textScrollList -edit -append $obj $pdiExludedFieldsList;
        }
    }
}

