	    string $PDISolver = `pdiSolver`;
	    int $indexFbodies = getAttr ($PDISolver + ".caif" );
		string $nameFbody = "Fbody" + $indexFbodies;
    
        new_PDIBody -a 0 -st 4 $result;
    
		string $pdiobjects[];
		for($obj in $result)
		{
