global proc createPdiIncludeExcludeFbodyFieldsWin()
{
    global string $pdiFBodiesList;
    global string $pdiExludedFbodyFieldsList;
    global string $pdiIncludedFbodyFieldsList;
    string $form = `setParent -q`;

    // layoutDialog's are not resizable, so hard code a size here,
    // to make sure all UI elements are visible.
    //

    formLayout -e -width 200 $form;

	string $txtExcluded= `text -label "Exclude: "  -font "boldLabelFont"`;
	string $txtIncluded= `text -label "Include: "  -font "boldLabelFont"`;
    $pdiExludedFbodyFieldsList = `textScrollList -w 120 -numberOfRows 10 -allowMultiSelection true` ;
    $pdiIncludedFbodyFieldsList = `textScrollList -w 120 -numberOfRows 10 -allowMultiSelection true` ;
    string $butAddFields = `button  -w 30  -h 20 -label ">>" -command "pdiIncludeFbodyField"`;
    string $butRemoveFields = `button  -w 30  -h 20 -label "<<" -command "pdiExcludeFbodyField"`;
    string $butOKFields = `button  -w 80  -h 30 -label "Accept" -command "pdiAcceptFbodyFields"`;

    int $spacer = 15;
    int $top = 5;
    int $edge = 5;

    formLayout -edit
        -attachForm            $txtExcluded  "left"   $spacer
        -attachControl         $txtIncluded  "left"  140 $txtExcluded
        -attachControl         $pdiExludedFbodyFieldsList "top" $edge $txtExcluded
        -attachForm            $pdiExludedFbodyFieldsList  "left"   $spacer
        -attachForm            $pdiExludedFbodyFieldsList  "bottom"    40
        -attachControl         $pdiIncludedFbodyFieldsList "top" $edge $txtIncluded
//        -attachControl         $pdiIncludedFbodyFieldsList  "left"  70 $pdiExludedFbodyFieldsList
        -attachForm            $pdiIncludedFbodyFieldsList  "left"    200
        -attachForm            $pdiIncludedFbodyFieldsList  "bottom"    40
        -attachControl         $butAddFields "top" 50 $txtExcluded
        -attachControl         $butAddFields "left" $spacer $pdiExludedFbodyFieldsList
        -attachControl         $butRemoveFields "top" 100 $txtExcluded
        -attachControl         $butRemoveFields "left" $spacer $pdiExludedFbodyFieldsList
        -attachControl         $butOKFields "top" $edge $pdiIncludedFbodyFieldsList
        -attachForm            $butOKFields  "left" 350 
    $form;

    string $selected[];
    $selected = `textScrollList -query -selectItem $pdiFBodiesList`;

    if( size( $selected) > 0)
    {
        string $fields[];
        $fields =`listConnections ($selected[0] +".fieldList")`;
    //    print $fields;

        //fill included list
        for ( $obj in $fields)
	    {
            textScrollList -edit -append $obj $pdiIncludedFbodyFieldsList;
        }

        //fill exlclude list
        string  $transformNodes[];
        $transformNodes = `ls -tr -dag -leaf`;
        string  $sceneforceFields[];

        for ( $obj in $transformNodes)
	    {
            string $type = `nodeType $obj`;
            if( $type == "gravityField" ||
                $type == "radialField" ||
                $type == "airField" ||
                $type == "vortexField" ||
                $type == "dragField" ||
                $type == "newtonField" ||
                $type == "turbulenceField" ||
                $type == "uniformField" ||
                $type == "volumeAxisField" )
            {
                $sceneforceFields[size($sceneforceFields)]=$obj;
            }
        }
        clear($transformNodes);

        //fill included list
        int $bIncludedField=0;
        for ( $obj in $sceneforceFields)
	    {
            $bIncludedField=0;
            for ( $obj2 in $fields)
	        {
                if( $obj == $obj2)
                {
                    $bIncludedField=1;
                    break;
                }
            }
            if( $bIncludedField==0)
            {
                textScrollList -edit -append $obj  $pdiExludedFbodyFieldsList;
            }
        }
    }
}
