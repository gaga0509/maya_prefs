//    {
//        delete $cracker;
//    }           

    $crackername = `textField -query -text $txtPdiCrackerName`;

    $cracker = `polySphere -n $crackername -sx 12 -sy 12 -axis 0 1 0 -radius $radius`;
    pathAnimation  -stu $startTime -etu $endTime  -c $pdiCrackerCurvePath $cracker[0];

