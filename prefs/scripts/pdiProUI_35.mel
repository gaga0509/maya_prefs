{
    global string $pdiFragmentsList;
    global string $selectedPdiCluster;
    global string $pdiCurrentSelectedFragments[];

    string $selection[];
	$selection = `textScrollList -query -allItems $pdiFragmentsList`;	
	if( size($selection) > 0)
	{
	    waitCursor -state on;

		string $clusterNode=`pdiCluster -assign $selection`;

		if( `objExists $clusterNode`)
		{
		    clear($pdiCurrentSelectedFragments);
			select -clear;
			$selectedPdiCluster = $clusterNode;

			updatePdiAdvancedFracturesPanel();
		}
		waitCursor -state off;

	}
	else
	{
		print(" error,selection is empty");
	}
}

global proc deletePdiCluster()
{
    global string $pdiClustersList;
	global string $selectedPdiCluster;
    string $selection[];
    $selection = `textScrollList -query -selectItem $pdiClustersList`;
	if( size($selection) > 0)
